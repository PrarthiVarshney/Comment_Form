    <h1>Form to Add a new Comment</h1>
    <form action="/comments/<%= foundcomment.id %>?_method=PATCH" method="post">

        <label for="comment">Comment</label>
        <input id="comment" name="comment" type="text" value="<%= foundcomment.comment %>">
